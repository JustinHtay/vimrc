syntax enable

set number
set showcmd
set cursorline
set showmatch
set showmode
set ruler

set incsearch
set hlsearch
set smartcase
set ignorecase

set autoindent
set smartindent

colorscheme inkpot

nnoremap <S-b> 0
nnoremap <S-e> $
nnoremap j gj
nnoremap k gk

map N Nzz
map n nzz

set softtabstop=3
set shiftwidth=3
set expandtab
set smarttab

set ff=unix
